<?xml version="1.0" encoding="utf-8"?>
<selector
   xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
               android:endColor="@color/GreenButtonStartColor"
               android:startColor="@color/GreenButtonEndColor"
               android:angle="270" />
            <stroke
               android:width="@dimen/button_border"
               android:color="@color/GreenButtonBorderColor" />
            <corners
               android:radius="15dp" />
            <padding
               android:left="0dp"
               android:top="@dimen/button_margin"
               android:right="0dp"
               android:bottom="@dimen/button_margin" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
               android:startColor="@color/GreenButtonStartColor"
               android:endColor="@color/GreenButtonEndColor"
               android:angle="270" />
            <stroke
               android:width="@dimen/button_border"
               android:color="@color/GreenButtonBorderColor" />
            <corners
               android:radius="15dp" />
            <padding
               android:left="0dp"
               android:top="@dimen/button_margin"
               android:right="0dp"
               android:bottom="@dimen/button_margin" />
        </shape>
    </item>

  <item android:state_enabled="false">
          <shape>
            <gradient
               android:startColor="@color/GreenButtonDisabledStartColor"
               android:endColor="@color/GreenButtonDisabledEndColor"
               android:angle="270" />
            <stroke
               android:width="@dimen/button_border"
               android:color="@color/GreenButtonBorderColor" />
            <corners
               android:radius="15dp" />
            <padding
               android:left="0dp"
               android:top="@dimen/button_margin"
               android:right="0dp"
               android:bottom="@dimen/button_margin" />
        </shape>
  </item>

    <item>        
        <shape>
            <gradient
               android:startColor="@color/GreenButtonStartColor"
               android:endColor="@color/GreenButtonEndColor"
               android:angle="270" />
            <stroke
               android:width="@dimen/button_border"
               android:color="@color/GreenButtonBorderColor" />
            <corners
               android:radius="15dp" />
            <padding
               android:left="0dp"
               android:top="@dimen/button_margin"
               android:right="0dp"
               android:bottom="@dimen/button_margin" />
        </shape>
    </item>
</selector>