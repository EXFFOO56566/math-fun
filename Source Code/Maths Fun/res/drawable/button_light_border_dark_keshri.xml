<?xml version="1.0" encoding="utf-8"?>
<selector
   xmlns:android="http://schemas.android.com/apk/res/android"
  >

    <item android:state_pressed="true" >
        <shape>
            <gradient
               android:endColor="@color/KeshriLightButtonStartColor"
               android:startColor="@color/KeshriLightButtonEndColor"
               android:type="radial" android:gradientRadius="250"
               android:angle="270" />
            <stroke
               android:width="@dimen/button_border"
               android:color="@color/KeshriLightButtonDarkKeshriBorderColor" />
            
            <corners
               android:radius="@dimen/button_redious" />
            <padding
               android:left="0dp"
               android:top="@dimen/button_margin"
               android:right="0dp"
               android:bottom="@dimen/button_margin" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
               android:startColor="@color/KeshriLightButtonStartColor"
               android:endColor="@color/KeshriLightButtonEndColor"
               android:type="radial" android:gradientRadius="250"
               android:angle="270" />
            <stroke
               android:width="@dimen/button_border"
               android:color="@color/KeshriLightButtonDarkKeshriBorderColor" />
            <corners
               android:radius="@dimen/button_redious" />
            <padding
               android:left="0dp"
               android:top="@dimen/button_margin"
               android:right="0dp"
               android:bottom="@dimen/button_margin" />
        </shape>
    </item>

  <item android:state_enabled="false">
          <shape>
            <gradient
               android:startColor="@color/KeshriLightButtonDisabledStartColor"
               android:endColor="@color/KeshriLightButtonDisabledEndColor"
               android:type="radial" android:gradientRadius="250"
               android:angle="270" />
            <stroke
               android:width="@dimen/button_border"
               android:color="@color/KeshriLightButtonDarkKeshriBorderColor" />
            <corners
               android:radius="@dimen/button_redious" />
            <padding
               android:left="0dp"
               android:top="@dimen/button_margin"
               android:right="0dp"
               android:bottom="@dimen/button_margin" />
        </shape>
  </item>

    <item>        
        <shape>
            <gradient
               android:startColor="@color/KeshriLightButtonStartColor"
               android:endColor="@color/KeshriLightButtonEndColor"
               android:type="radial" android:gradientRadius="250"
               android:angle="270" />
            <stroke
               android:width="@dimen/button_border"
